{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",

    "noImplicitAny": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "target": "es2018"
  },
  "typedocOptions": {
    "entryPoints": ["./test/stubs.ts"],
    "out": "./test/docs",
    "readme": "none",
    "disableSources": true,
    "plugin": ["./dist"]
  },
  "exclude": ["./src"]
}
